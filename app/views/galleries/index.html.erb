<h1 class="page-title">Galleries</h1>

<div class="row">
 	<ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-4 gallery-list">
	 	<% @galleries.each do |gallery| %>
	    <li>
	    	<p><%= link_to gallery.name, gallery_path(gallery) %></p>
	    	<%= link_to image_tag(gallery.cover_image.url(:original)), gallery_path(gallery) %>
        
	    	<% if photographer_signed_in? %>
          <%= link_to "Remove Gallery", gallery_path(gallery), method: :delete, confirm: "Are you sure you want to delete gallery: #{gallery.name}?" %>
	    	<% end %> 
	    </li>
		<% end %>
	</ul>
</div>