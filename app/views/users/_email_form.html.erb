<%= form_for :email, {controller: "users", method: "send_email"} do |f| %>
  <% if @errors %>
    <p><%= @errors %></p>
  <% end %>

  <div><%= f.label :subject %><br>
  <%= f.text_field :subject, autofocuse: true %></div>

  <div><%= f.label :body %><br>
  <%= f.text_area :body, autofocuse: true, rows: 25 %></div>

  <div><%= f.submit "Send" %></div>
<% end %>